# Основные настройки приложения
NODE_ENV=development
PORT=3000
HOST=localhost
BASE_URL=http://localhost:3000

# База данных MongoDB
MONGODB_URI=mongodb://localhost:27017/cryptotribes
MONGODB_TEST_URI=mongodb://localhost:27017/cryptotribes_test

# Сессии
SESSION_SECRET=your-super-secret-session-key-change-in-production
COOKIE_DOMAIN=localhost

# JWT (для будущего использования)
JWT_SECRET=your-jwt-secret-key-change-in-production

# Stripe платежи
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Криптоплатежи
CRYPTO_API_KEY=your_crypto_api_key
CRYPTO_API_URL=https://api.crypto.com

# Логирование
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000

# Кэширование
CACHE_ENABLED=false

# Лимиты
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Игровые настройки
GAME_CYCLE_INTERVAL=60000
MAX_VILLAGES_PER_USER=5
MAX_TROOPS_PER_VILLAGE=10000

# Мониторинг
METRICS_ENABLED=true
SLOW_QUERY_THRESHOLD=1000 